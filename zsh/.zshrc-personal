# Shortcut
alias mkd="mkdir -p "
alias parufind="paru -Slq | fzf --multi --preview 'paru -Si {1}' | xargs -ro paru -S"
alias record="ffmpeg -f x11grab -s 1920x1080 -i :0.0 -f pulse -ac 2 -ar 48000 -i alsa_output.pci-0000_00_1f.3.analog-stereo.monitor -f pulse -ac 2 -ar 48000 -i alsa_input.pci-0000_00_1f.3.analog-stereo -filter_complex amix=inputs=2"


# Directory listing
alias ls="lsd"
alias la="lsd -1hAF"
alias ll="lsd -hlAF --group-dirs first --blocks permission --blocks date --date +'%a %b %d%I:%M %p' --blocks size --blocks name"
alias tree="lsd --tree"

# FUZ
alias fn="sh -e ~/.local/bin/fuz"

# Copying
alias yy="rsync -vP"

# Shortcut
alias mkd="mkdir -p "
alias parufind="paru -Slq | fzf --multi --preview 'paru -Si {1}' | xargs -ro paru -S"

# Applications
# ytfzf
alias yts="ytfzf -tfl --subs=2 --preview-side=right "
alias yt="ytfzf -tf --preview-side=right"

# Htop
alias htop="htop --tree"

# ranger
alias or="ranger"

# sxiv
alias sx="sxiv -b ./"

#nitrogen
alias setbg="nitrogen --set-scaled "
#neovim
alias v="nvim"

# qutebrowser
alias qute="qutebrowser --qt-flag ignore-gpu-blocklist --qt-flag enable-gpu-rasterization --qt-flag enable-native-gpu-memory-buffers --qt-flag num-raster-threads=4"

# misc
alias wnet="slurm -i wlp2s0"
alias clock="tty-clock -tcsf '%A, %B %d'"


